<%= render'users/list',user:@user,book:@book %>

    <div class="col-md-9">
        <h1>Books</h1>
      <table>
      <tr>
      <th>Title</th>
      <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
        <td><%= link_to book.title,book_path(book.id)%></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </table>
    </div>

  </div>
</div>
